                            </ContentView>
                        </StackLayout>
                    </StackLayout>
                    <ScrollView Grid.Row="1">
                        <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                            <Label Text="Testing" FontSize="Title"/>
                            <Label Text="No Branch Required" FontSize="16" Padding="0,0,0,0"/>
